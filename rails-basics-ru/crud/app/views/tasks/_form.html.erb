<%= form_with model: task do |f| %>
  <p><%= f.label :name, 'Task name' %><p>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :description, 'Task description'%></p>
  <p><%= f.text_area :description, rows: 5 %></p>

  <p><%= f.label :creator, 'Task creator' %><p>
  <p><%= f.text_field :creator %></p>

  <p><%= f.label :performer, 'Perform to' %><p>
  <p><%= f.text_field :performer %></p>

  <p><%= f.submit 'Save' %></p>
<% end %>